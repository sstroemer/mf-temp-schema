{
    "$schema": "https://json-schema.org/draft/2019-09/schema",

    "title": "Type definitions",
    "description": "This just defines all types that are used elsewhere. The `CoreComponent` type can not be defined here, to prevent a self recursion.",

    "$defs": {
        "Bound": {
            "oneOf": [
                {"type": "string"},
                {"type": "number"}
            ]
        },
        "Scalar": {
            "type": "number"
        },
        "Numerical": {
            "oneOf": [
                {"type": "number"},
                {"type": "array"},
                {"type": "string"}
            ]
        }
    }
}